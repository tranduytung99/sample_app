<li id="micropost-<%= micropost.id %>">
  <%= link_to gravatar_for(micropost.user, size: Settings.size), micropost.user %>
  <span class="user"><%= link_to micropost.user.name, micropost.user %></span>
  <span class="content"><%= micropost.content %></span>
  <% if micropost.picture?%>
  <%= image_tag micropost.picture.url, class: "img_tag_micro" %>
  <% end %>
  <span class="timestamp">
    Posted <%= time_ago_in_words micropost.created_at %> <%= t ".ago" %>
    <% if current_user? micropost.user %>
      <%= link_to t(".delete"), micropost, method: :delete, data:{confirm: "You sure?"} %>
    <% end %>  
  </span>
</li>
