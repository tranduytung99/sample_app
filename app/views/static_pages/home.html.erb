<% provide :title, t(".title") %>
<% if logged_in? %>
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <%= render "shared/user_info" %>
      </section>
      <section class="micropost_form">
        <%= render "shared/micropost_form" %>
      </section>
    </aside>
    <div class="col-md-8">
      <h3><%= t ".content"%></h3>
      <%= render "shared/feed" %>
    </div>
  </div>
<% else %>

<div class="center jumbotron">
  <h1><%= t ".title" %></h1>

  <h2>
    <%= t ".info_1" %>
    <a href="http://www.railstutorial.org/"><%= t ".info_2" %></a>
    <%= t ".info_3" %>
  </h2>

  <%= link_to t(".sign_up"),signup_path, class: "btn btn-lg btn-primary" %>
</div>

<%= link_to image_tag("rails.png", alt: t(".logo")),"http://rubyonrails.org/" %>
<% end %>